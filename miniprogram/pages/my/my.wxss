/* pages/mine/mine.wxss */

.toget{
  
  transform: translateX(-50%) translateY(-50%);
  position: fixed;
  left: 50%;
  top: 40%;
  border: 1px solid gold;
  border-radius:150rpx;
  background-color: gold;
  overflow: hidden;
  width: 300rpx;
}
.toget button{
  background-color: gold;
  font-weight: bold;
}




.UCenter-bg{
  background-size: cover;
  height: 400rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #000;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.userName{
  font-size: 18px;
}


.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}



.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}


.TPcontainer{
  width: 750rpx;
  height: 710rpx;
  background-color: #fff;
 padding-top: 20rpx;
 overflow: hidden;
 display: flex;
 flex-wrap: wrap;
}
.TPleft,.TPright{
 flex: 50%;
  text-align: center;
  width: 50%;
  
  
}
.TPright{
  border: 0;
  padding: 0;
}
.TPcontainer image{
  
  width: 150rpx;
  height: 150rpx;
}

.TP-title{
  font-weight: bold;
}
.TPcontainer .talk{
  width: 120rpx;
  height: 120rpx;
  margin-top: 30rpx;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: start;
  }
  

  
  .username {
    margin-top: 20px;
    width: 300px;
    height: 40px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .signature {
    margin-top: 20px;
    width: 300px;
    height: 100px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .submit {
    margin-top: 20px;
    width: 100px;
    height: 40px;
    background-color: #000;
    color: #fff;
    border-radius: 5px;
  }
  