/* pages/map/map.wxss */
/* 侧边图标 */
map {
    z-index: 2;
}

.location {
    position: fixed;
    right: 30rpx;
    bottom: 100rpx;
    width: 60rpx;
    height: 60rpx;
    z-index: 3;
}

.search {
    position: fixed;
    right: 30rpx;
    bottom: 250rpx;
    width: 60rpx;
    height: 60rpx;
    z-index: 3;

}

/* 侧边图标 */

/* 底部按钮 */
.getLocate {
    position: fixed;
    bottom: 50%;
    right: 50%;
    transform: translateX(50%) translateY(50%);
    width: 600rpx;
    background-color: lightblue;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    border-radius: 100rpx;
    font-weight: bold;
    box-shadow: 0rpx 1rpx 20rpx #ccc;
    z-index: 90;
}

.bottomBtn {
    position: fixed;
    bottom: 8%;
    right: 50%;
    transform: translateX(50%) translateY(50%);
    width: 120rpx;
    height: 120rpx;
    background-color: lightyellow;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-items: center;
    border-radius: 50%;
    box-shadow: 0 0 10px 2px #ccc;
}

.eatimg {
    margin-top: 20rpx;
    width: 40rpx;
    height: 40rpx;
    z-index: 8;
}

.eattext {
    font-size: 12px;
    font-weight: 200;
    z-index: 8;
}

/* 底部按钮 */

/* 遮盖 */
.maskall {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 9;
}

/* 遮盖 */

/* 以下为描述模块 */
.decbody {
    width: 0rpx;
    height: 50%;
    background: #000000;
    position: absolute;
    top: -50%;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
    z-index: 1;
}

.label {
    font-size: 9px;
    padding: 0rpx 6rpx;
    background-color: rgba(0, 0, 0, 0.08);
    border-radius: 10rpx;
    display: inline-block;
    margin: 5rpx 10rpx 5rpx 0;
}


.map-row-show {
    position: absolute;
    border-radius: 25rpx;
    position: absolute;
    left: 50rpx;
    top: 0;
    width: 650rpx;
    color: #000000;
    background-color: #ffffff;


}

.mapshow {
    transform: rotate(0deg) scale(1) translate(0%, 100%);
    -webkit-transform: rotate(0deg) scale(1) translate(0%, 100%);
}

/* 下滑效果 */


.map-row {
    width: 90%;
    margin: 5px auto !important;
    line-height: 20px
}

.close {
    position: absolute;
    right: 5px;
    top: 5px;
    width: 20px;
    height: 20px;
    z-index: 3;
}

.break {
    padding: 5px;
}

.teleport {
    margin: 8px auto;
    width: 400rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-weight: 600;
    background-color: lightblue;
    color: #000000;
    border-radius: 50rpx;
}

/* 描述模块 */

/* 搜索模块 */

.searchbody {
    width: 0;
    height: 50%;
    background: #000000;
    position: absolute;
    top: -50%;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
    z-index: 1;

}

.search-row-show {
    position: absolute;
    border-radius: 25rpx;
    position: absolute;
    left: 70rpx;
    top: 0;
    width: 600rpx;
    color: #000000;
    background-color: white;
}

.searchshow {
    transform: rotate(0deg) scale(1) translate(0%, 100%);
    -webkit-transform: rotate(0deg) scale(1) translate(0%, 100%);
}

.searchtext,
.searchres {
    margin: 5px;
}

.searchres {
    width: 100%;
    word-wrap: break-word;
    white-space: pre-line;
}