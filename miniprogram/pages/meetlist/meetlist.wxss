/* pages/meetlist/meetlist.wxss */
/* 搜索框 */
.SW{
  transition: all 0.3s;
}
.location {
  position: fixed;
  right: 40rpx;
  bottom:60rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 3;
}
.weui-search-bar {
  position: relative;
  margin: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background:transparent;
  
}
.weui-icon-search {
  margin-right: 4px;
  font-size: inherit;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__text {
  display: inline-block;
  font-size: 16px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
  border-radius: 20px;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
 
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 20px;
  text-align: center;
  color: #9B9B9B;
  background: #FFFFFF;
  line-height: 28px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09BB07;
  white-space: nowrap;
}
/* 搜索框 */


/* 每个的卡片 */

.item{
  height: 307rpx;
  width: 90%;
  margin: 30rpx 5%;
  border: 1px solid rosybrown;
  border-radius: 20rpx;
  box-shadow:0 0 15rpx #ccc;
  background-color: #FFFFFF;
  overflow: hidden;
  text-overflow: ellipsis;
    white-space: nowrap;
}

.item-img{
  height: 220rpx;
  width: 100%;
 
  border-radius: 30rpx;
  padding: 5rpx 5rpx;
  margin: 10rpx;
  
}
.img-user{
  float: left;
  width: 30%;
}
.user-img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin: 0 20rpx 0 10rpx;
  vertical-align: middle;
}

.item-dec{
  width: 65%;
  float: right;
}

.title,.item-shop{
  font-weight: bold;
  font-size: 14px;
  margin: 10rpx 0;
}
.label{
  font-size: 9px;
  padding: 5rpx;
  background-color: rgba(0, 0, 0, 0.08);
  border-radius: 10rpx;
  margin: 0 2rpx;
}
.item-shop{
  font-size: 12px;
}
.item-content{
  
 
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
 
  margin-top: 10rpx;
}
.item-info{
  margin-top:20rpx;
  font-size: 11px;
  font-weight: bold;
}
.item-time{
  
  font-weight: bold;
  margin-top: 20rpx;
}

