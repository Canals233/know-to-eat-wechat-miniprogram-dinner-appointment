.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: start;
  }
  
  .avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background-color: white;
   
  }
  
  .username {
    margin-top: 20px;
    width: 300px;
    height: 40px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .signature {
    margin-top: 20px;
    width: 300px;
    height: 100px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .submit {
    margin-top: 20px;
    width: 100px;
    height: 40px;
    background-color: #000;
    color: #fff;
    border-radius: 5px;
  }
  